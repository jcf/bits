---
import config from '@bits/shared/config';
import Link from '@bits/shared/components/Link';

import "@/styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="antialiased min-h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Bits - A modern web application" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <main class="grow">
      <slot />
    </main>

    <footer>
      <p class="text-sm">
        Brought to you by <Link class="font-semibold" href={config.apps.www.url}>Bits</Link>.
      </p>
    </footer>
  </body>
</html>
