---
import { twMerge } from "tailwind-merge";
import type { HTMLTag, Polymorphic } from "astro/types";

type Props = Polymorphic<{ as: HTMLTag }>;

const { as: Tag = "div", class: classes, ...rest } = Astro.props;
---

<Tag class={twMerge("mx-auto max-w-7xl sm:px-6 lg:px-8", classes)}>
  <slot />
</Tag>
